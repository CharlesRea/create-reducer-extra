{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "./src/**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}